<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_promo"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/primary"
                    android:fitsSystemWindows="true"
                    tools:listitem="@layout/pager_item" />

                <RelativeLayout
                    android:id="@+id/viewPagerIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:id="@+id/viewPagerCountDots"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true">
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/two_color">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/smallText"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="@dimen/smallerText"
                        app:cardCornerRadius="@dimen/smallText">

                        <LinearLayout
                            android:id="@+id/llGizi"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/smallText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/medicines"
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@string/gizi"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/smallText"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="@dimen/smallerText"
                        app:cardCornerRadius="@dimen/smallText">

                        <LinearLayout
                            android:id="@+id/llPenyakit"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="@dimen/smallText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/medicines2"
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="@string/penyakit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/smallText"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="@dimen/smallerText"
                        app:cardCornerRadius="@dimen/smallText">

                        <LinearLayout
                            android:id="@+id/llPerawatan"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="@dimen/smallText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/love"
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@string/perawatan"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/smallText"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="@dimen/smallerText"
                        app:cardCornerRadius="@dimen/smallText">

                        <LinearLayout
                            android:id="@+id/llAbout"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="@dimen/smallText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/chemistry"
                                android:layout_width="@dimen/icon_size"
                                android:layout_height="@dimen/icon_size"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:text="@string/aplication"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallText">

                    <TextView
                        android:id="@+id/info_gizi_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/smallText"
                        android:text="@string/artikel"
                        android:textAllCaps="true"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/mediumText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/smallText"
                        android:layout_marginTop="@dimen/smallText"
                        android:paddingBottom="@dimen/smallText"
                        android:paddingTop="@dimen/smallText">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_ingo_gizi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_no_photo" />

                            <TextView
                                android:id="@+id/info_gizi_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/smallText"
                                android:text="@string/info_gizi_label" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallText">

                    <TextView
                        android:id="@+id/info_penyakit_lbl"
                        android:text="@string/news"
                        android:textColor="@color/primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/smallText"
                        android:paddingBottom="@dimen/smallText"
                        android:textSize="@dimen/mediumText"
                        android:textAllCaps="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/smallText"
                        android:layout_marginBottom="@dimen/smallText">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/info_penyakit_img"
                                android:src="@drawable/ic_no_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/info_penyakit_txt"
                                android:text="@string/info_gizi_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/largeText"></View>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>